                11,6,20,20

	DEFPUSHBUTTON "&OK", IDOK,
                144, 134, 50, 14

    LTEXT       "QClip v0.9.4", IDC_ABOUT_TITLE,
                48, 8, 60, 12,
                SS_LEFT

    LTEXT       "Queue based clipboard extender.\r\nCopyright © 2006 Aaron Curtis.",
                (-1),
                48, 23, 146, 26,
                SS_LEFT

    LTEXT       "This program is free software; you can redistribute it and/or modify it under the terms of the GNU General Public License as published by the Free Software Foundation; either version 2 of the License, or (at your option) any later version.",
                (-1),
                48, 48, 146, 50,
                SS_LEFT

    LTEXT       "email:",
                (-1),
                48, 104, 30, 12,
                SS_LEFT

    LTEXT       "aaron@cadae.net",
                IDC_ABOUT_EMAIL,
                80, 104, 60, 12,
                SS_LEFT | SS_NOTIFY

    LTEXT       "web:",
                (-1),
                48, 118, 30, 12,
                SS_LEFT

    LTEXT       "www.cadae.net",
                IDC_ABOUT_WEB,
                80, 118, 60, 12,
                SS_LEFT | SS_NOTIFY
END


DIALOG_GENERAL_SETTINGS DIALOG 0, 0, PROP_SM_CXDLG, PROP_SM_CYDLG
STYLE WS_CHILD | WS_CLIPSIBLINGS
CAPTION "General"
FONT 8, "Ms Sans Serif"
BEGIN
    LTEXT       "Queue Size", (-1),
                10, 8, 50, 12 

    EDITTEXT    IDC_SIZE_BOX,
                60, 6, 30, 12,
                ES_NUMBER

    CONTROL     "", IDC_SIZE_UPDOWN, UPDOWN_CLASS,
                UDS_ALIGNRIGHT | UDS_ARROWKEYS | UDS_AUTOBUDDY |
                UDS_SETBUDDYINT | WS_TABSTOP,
                0, 0, 0, 0

    CONTROL     "Unlimited queue",
                IDCB_DYNAMIC_QUEUE, "BUTTON",
                BS_AUTOCHECKBOX | WS_TABSTOP,
                10, 23, 180, 12

    CONTROL     "Auto-save and restore the queue between sessions",
                IDCB_LOAD_PREVIOUS, "BUTTON",
                BS_AUTOCHECKBOX | WS_TABSTOP,
                10, 38, 180, 12

    CONTROL     "Preview bitmaps in the popup menu",
                IDCB_PREVIEW_BITMAPS, "BUTTON",
                BS_AUTOCHECKBOX | WS_TABSTOP,
                10, 53, 180, 12

    GROUPBOX    "Common Items", (-1),
                10, 68, 190, 102

    CONTROL     "Date (Long Format)",
                IDCB_LONG_DATE, "BUTTON",
                BS_AUTOCHECKBOX | WS_TABSTOP,
                18, 80, 150, 12

    CONTROL     "Date (Short Format)",
                IDCB_SHORT_DATE, "BUTTON",
                BS_AUTOCHECKBOX | WS_TABSTOP,
                18, 92, 150, 12

    CONTROL     "Date / Time (Custom)",
                IDCB_CUSTOM_DATE, "BUTTON",
                BS_AUTOCHECKBOX | WS_TABSTOP,
                18, 104, 150, 12

    EDITTEXT    IDC_DATE_FORMAT,
                18, 118, 116, 12,
                ES_AUTOHSCROLL

    LTEXT       "Custom Items", (-1),
                18, 134, 150, 12

    EDITTEXT    IDC_COMMON_FILE,
                18, 146, 116, 12,
                ES_AUTOHSCROLL

    PUSHBUTTON  "Browse...", IDC_COMMON_BROWSE,
                140, 145, 50, 14
END

